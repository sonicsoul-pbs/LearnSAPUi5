<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}"
        class="sapUiResponsiveMargin"
    >
        <content>
            <core:Icon
                src="sap-icon://world"
                size="8rem"
                class="sapUiMediumMargin"
            />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseHelloDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
